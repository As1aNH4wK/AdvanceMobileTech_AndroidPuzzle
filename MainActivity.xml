<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.build.blockpuzzle.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_weight="0.30">

        <ImageView
            android:layout_height="110dp"
            android:id="@+id/iw0"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/bat0"
            android:clickable="true"
            android:scaleType="fitXY"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:layout_height="110dp"
            android:id="@+id/iw1"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/bat1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:layout_height="110dp"
            android:id="@+id/iw2"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/bat2"
            android:clickable="true"
            android:scaleType="fitXY"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:id="@+id/iw3"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/bat3"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="111dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:id="@+id/iw5"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/bat5"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="111dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:id="@+id/iw6"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/bat6"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="112dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageView
            android:id="@+id/iw7"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/bat7"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="112dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:id="@+id/iw8"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/bat8"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="112dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp" />

        <ImageView
            android:id="@+id/iw4"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/bat4"
            android:clickable="true"
            android:scaleType="fitXY"
            android:layout_height="111dp"
            android:onClick="on_click"
            android:layout_width="130dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"/>


    </GridLayout>

    <TextView
        android:text="TIME:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.16"
        android:textSize="24sp" />


    <Button
        android:text="Next Puzzle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:onClick="nextPuzzle"
        android:textSize="24sp" />

    <Button
        android:text="Save and Exit"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/save_and_exit"
        android:visibility="invisible"
        android:textSize="24sp"
        android:layout_weight="0.17" />


</LinearLayout>

