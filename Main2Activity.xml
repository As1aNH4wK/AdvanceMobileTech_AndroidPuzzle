<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.build.blockpuzzle.Main2Activity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba0"
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba1"
            android:id="@+id/imageView2"
            android:layout_column="1"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba2"
            android:id="@+id/imageView3"
            android:layout_column="2"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba3"
            android:id="@+id/imageView4"
            android:layout_column="0"
            android:layout_row="1"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba4"
            android:id="@+id/imageView5"
            android:layout_column="1"
            android:layout_row="1"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba5"
            android:id="@+id/imageView6"
            android:layout_column="2"
            android:layout_row="1"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba6"
            android:id="@+id/imageView7"
            android:layout_column="0"
            android:layout_row="2"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba7"
            android:id="@+id/imageView8"
            android:layout_column="1"
            android:layout_row="2"
            android:scaleType="fitXY"
            android:onClick="on_click"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/brba8"
            android:id="@+id/imageView9"
            android:layout_column="2"
            android:layout_row="2"
            android:scaleType="fitXY"
            android:onClick="on_click"/>
    </GridLayout>

    <TextView
        android:text="TIME:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.08" />



</LinearLayout>
